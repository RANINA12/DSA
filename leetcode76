class Solution {

    public static void function(int[] arr, List<List<Integer>> ArrLi, List<Integer> Li, int index) {

        // base condition 
        if (index >= arr.length) {
            ArrLi.add(new ArrayList<>(Li));
            return;
        }

        //include 
        Li.add(arr[index]);
        function(arr, ArrLi, Li, index + 1);
        Li.remove(Li.size() - 1);
        function(arr, ArrLi, Li, index + 1);
    }

    public List<List<Integer>> subsets(int[] nums) {
         List<List<Integer>> set = new ArrayList<>();
        List<Integer> output
                = new ArrayList<>();
        function(nums, set, output, 0);
        return  set;
    }
}
