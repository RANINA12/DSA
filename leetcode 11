class Solution {
    public int maxArea(int[] height) {
        
        int right=height.length , left=0;
        int maxcapcity =0;
    
         
       while((right-1)>left){
           
            if(height[left]>=height[right-1]){
                System.out.println("we are here 0");
                maxcapcity=Math.max(maxcapcity,height[right-1]*(right-left-1));
                right--;
                System.out.println(maxcapcity);
            }

            if(height[left]<height[right-1]){
                System.out.println("we are here 1");
                 maxcapcity=Math.max(maxcapcity,height[left]*(right-left-1));
                left++;
                 System.out.println(maxcapcity);
                
            }
        }
          
          return maxcapcity;
          
    }
   
}
