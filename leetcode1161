class Solution {
    public int maxLevelSum(TreeNode root) {
       Queue<TreeNode> q = new LinkedList<>();
       q.offer(root);
       int maxsum = Integer.MIN_VALUE;
       int maxlevel = -1 , level =1;

       while(!q.isEmpty()){
        int sum =0;
        int levelsize = q.size(); 
        for(int i =0 ; i<levelsize ;i++){
            TreeNode curr = q.remove();
            sum += curr.val;
            if(curr.left!=null){
                q.add(curr.left);
            }
            if(curr.right!=null){
                q.add(curr.right); 
            }
        }
            if(sum>maxsum){
                maxsum=sum;
                maxlevel=level;
            }
            level++;
       }
        return maxlevel;
    }
}
