class Solution {
    public int lengthOfLongestSubstring(String s) {
        
        int max = 0 ;
        String result ="";
        for(int i =0; i<s.length();i++){

            char ch = s.charAt(i);

         if (result.contains(String.valueOf(ch))) {
                // toh kya karna 
                int duplicateIndex = result.indexOf(ch);
                result = result.substring(duplicateIndex + 1);
            }

            result = result + ch;

            max = Math.max(max, result.length());
            
        }

        return max;
    }
}
