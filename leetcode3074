class Solution {
    public int minimumBoxes(int[] apple, int[] capacity) {
        Arrays.sort(capacity);
        int sum =0;
        int ans=0;
        for(int i =0 ; i<apple.length;i++){
            sum+=apple[i];
        }
        int n = capacity.length;
        for(int i = n-1 ; i>=0 ;i--){
            ans+=capacity[i];
            if(ans>=sum) return n-i;
        }

        return n;
    }
}
