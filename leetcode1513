class Solution {
    public int numSub(String s) {
        int mod = 1000000007;
        long res=0;
        long n=0;
        for(int i = 0; i<s.length();i++){
            if(s.charAt(i)=='1') n++;
            else{
                if(n==0) continue;
                 res = res + (n*(n+1) /2) % mod;
                 n=0;
            }
        }
        res = res + (n*(n+1) /2) % mod;      
        return (int) res;
    }
}
