class Solution {
    public int minPairSum(int[] nums) {
        int max = 0;
        Arrays.sort(nums);
        int first =0;
        int last = nums.length-1;
        while(first<last){
          max=  Math.max(nums[first]+nums[last] , max);
            first++;
            last--;
        }
  return max;
    }
}
