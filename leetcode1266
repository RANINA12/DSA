class Solution {
    public int minTimeToVisitAllPoints(int[][] points) {
        int x = points[0][0];
        int y = points[0][1];
        int distance = 0;
        for(int  i = 1 ; i<points.length ;i++){
            int a = Math.abs(points[i][0] - x );
            int b = Math.abs(points[i][1] -y);
            distance += Math.max(a,b);
            x =points[i][0];
            y=points[i][1];

        }
        return distance;
    }
}
