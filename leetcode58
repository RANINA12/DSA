class Solution {
    public int lengthOfLastWord(String s) {
        StringBuilder b = new StringBuilder(s);
        int count = 0;
        int i = s.length() - 1;
        while (i >= 0 && b.charAt(i) == ' ') {
            i--;
        }
        b = b.replace(i + 1, b.length(), "");
        i = b.length() - 1;
        while (i >= 0 && b.charAt(i) != ' ') {
            count++;
            i--;
        }
        return count;
    }
}
